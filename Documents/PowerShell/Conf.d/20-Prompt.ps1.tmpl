{{- if lookPath "starship" }}
# Starship

function Invoke-Starship-TransientFunction {
	"$(starship module time)$(starship module status)$(starship module character)"
}

{{ output "starship" "init" "powershell" | comment "# "}}
{{ output "starship" "init" "powershell" "--print-full-init" }}

Enable-TransientPrompt

{{- else }}
# pure-pwsh and posh-git

if (!(Get-Module pure-pwsh)) {
    Install-Module -Name pure-pwsh
}
Import-Module -Name pure-pwsh

if (!(Get-Module posh-git)) {
    Install-Module -Name posh-git
}
Import-Module -Name posh-git

{{- end }}
# mise

{{- if lookPath "mise" }}
{{  output "mise" "activate" "pwsh" }}
{{- end }}
