# https://www.chezmoi.io/reference/special-files-and-directories/chezmoiexternal-format/
[".vim/pack/chezmoi/opt/minpac"]
type = "archive"
exact = true
include = ["*/autoload/**", "*/doc/**", "*/plugin/**"]
refreshPeriod = "24h"
stripComponents = 1
url = "https://github.com/k-takata/minpac/archive/master.zip"

{{ if ne .chezmoi.os "windows" }}
[".local/bin"]
type = "archive"
exact = false
refreshPeriod = "168h"
stripComponents = 1
{{   if eq .chezmoi.os "linux" }}
url = "https://github.com/afnanenayet/diffsitter/releases/latest/download/diffsitter-x86_64-unknown-linux-gnu.tar.gz"
{{   else }}
url = "https://github.com/afnanenayet/diffsitter/releases/latest/download/diffsitter-x86_64-apple-darwin.tar.gz"
{{   end }}
{{ end }}
