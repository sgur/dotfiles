[net]
git-fetch-with-cli = true

[build]
# Use sccache for build cache sharing
# ‚ùØ cargo install sccache --locked
{{ if lookPath "sccache" -}}
rustc-wrapper = {{ lookPath "sccache" | quote }}
{{- end }}

[target.x86_64-unknown-linux-gnu]
{{ if lookPath "clang" -}}
linker = "cargo"
{{- end }}
{{ if lookPath "mold" -}}
rustflags = ["-C", "link-arg=-fuse-ld={{- lookPath "mold" -}}"]
{{- end }}
