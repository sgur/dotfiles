colorscheme catppuccin_macchiato
set-option global ui_options terminal_assistant=none

addhl global/ wrap -word

enable-auto-pairs

eval %sh{kak-lsp --kakoune -s $kak_session}
lsp-enable
# hook global WinSetOption filetype=(rust|python|go|javascript|typescript|c|cpp) %{
# hook global WinSetOption filetype=(bash|css|html|javascript|jsx|json|typescript|tsx) %{
#    lsp-enable-window
#}
set-option global lsp_hover_anchor true
set-option global lsp_auto_show_code_actions true
lsp-auto-hover-enable

evaluate-commands %sh{
    autoload_directory() {
        find -L "$1" -type f -name '*\.kak' \
            | sed 's/.*/try %{ source "&" } catch %{ echo -debug Autoload: could not load "&" }/'
    }
    if [ -d "${kak_runtime}/autoload" ]; then
        autoload_directory ${kak_runtime}/autoload/
    fi
}


