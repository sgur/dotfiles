{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "warn",
        "useHookAtTopLevel": "warn"
      },
      "suspicious": {
        "noDoubleEquals": "warn"
      },
      "style": {
        "noNamespace": "error",
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn"
      },
      "nursery": {
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "globals": ["afterAll", "afterEach", "beforeAll", "beforeEach", "describe", "test", "React"],
    "formatter": {
      "trailingComma": "es5"
    }
  }
}
